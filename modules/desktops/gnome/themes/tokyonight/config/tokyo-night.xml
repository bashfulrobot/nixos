<style-scheme id="tokyo-night" name="Tokyo Night" version="1.0">
	<author>Kevin Nel</author>
	<_description>A clean dark theme for gtksourceview5 applications that celebrates the lights of Downtown Tokyo at night.</_description>

	<!-- Dracula colors -->
	<color name="background" value="#1a1b26"/>
	<color name="current-line" value="#414868"/>
	<color name="selection" value="#24283b"/>
	<color name="foreground" value="#a9b1d6"/>
	<color name="comment" value="#565f89"/>
	<color name="cyan" value="#73daca"/>
	<color name="dark-cyan" value="#2ac3de"/>
	<color name="blue" value="#7dcfff"/>
	<color name="green" value="#9ece6a"/>
	<color name="orange" value="#ff9e64"/>
	<color name="pink" value="#bb9af7"/>
	<color name="purple" value="#7aa2f7"/>
	<color name="red" value="#ff7768e"/>
	<color name="yellow" value="#e0af68"/>

	<!-- Helper colors -->
	<color name="white" value="#c0caf5"/>
	<color name="bone-white" value="#cfc9c2"/>
	<color name="weird-gray" value="#565f89"/>

	<style name="text" foreground="foreground" background="background"/>
	<style name="selection" background="selection"/>
	<style name="cursor" foreground="white" background="white"/>
	<style name="current-line" foreground="current-line" background="current-line"/>
	<style name="line-numbers" foreground="weird-gray" background="background"/>
	<style name="bracket-match" foreground="orange" background="background" underline="true"/>
	<style name="search-match" foreground="selection" background="orange"/>
        <style name="background-pattern" background="current-line"/>


	<style name="def:function" foreground="blue"/>
	<style name="def:identifier" foreground="cyan"/>
	<style name="def:keyword" foreground="pink"/>
	<style name="def:number" foreground="orange" />
	<style name="def:boolean" foreground="blue"/>
	<style name="def:string" foreground="green"/>
	<style name="def:special-char" foreground="pink"/>
	<style name="def:builtin" foreground="cyan"/>
	<style name="def:type" foreground="dark-cyan"/>
	<style name="def:preprocessor" foreground="dark-cyan"/>
	<style name="def:comment" foreground="comment"/>

	<!-- Python-specific stuff -->
	<style name="python:module-handler" foreground="pink"/>
	<style name="python:function-name" foreground="blue"/>
	<style name="python:decorator" foreground="purple"/>
	<style name="python:class-name" foreground="dark-cyan"/>
	<style name="python:special-variable" foreground="orange"/>
	<style name="python:builtin-constant" foreground="purple"/>

	<style name="html:identifier" foreground="purple"/>


	<style name="def:specials" foreground="#f8f8f2"/>
	<style name="def:statement" foreground="pink"/>

	<style background="green" bold="true" foreground="background" name="diff:added-line"/>
	<style foreground="background" background="red" name="diff:removed-line"/>
	<style background="weird-grey" foreground="background" name="diff:changed-line"/>

        <!-- Markup -->
        <style name="def:emphasis"                italic="true"/>
        <style name="def:strong-emphasis"         foreground="purple" bold="true"/>
        <style name="def:inline-code"             foreground="cyan"/>
        <style name="def:insertion"               underline="single"/>
        <style name="def:deletion"                foreground="red" strikethrough="true"/>
        <style name="def:link-text"               foreground="orange"/>
        <style name="def:link-symbol"             foreground="orange" bold="true"/>
        <style name="def:link-destination"        foreground="pink" italic="true" underline="single"/>
        <style name="def:heading"                 foreground="green" bold="true"/>
        <style name="def:thematic-break"          foreground="green" bold="true"/>
        <style name="def:preformatted-section"    foreground="cyan"/>
        <style name="def:list-marker"             foreground="purple" bold="true"/>

</style-scheme>
